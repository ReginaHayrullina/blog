<h1>Posts</h1>
<%= link_to 'New article', new_article_path, class: "btn btn-large btn-success" %>
<table class="table ">
  
<% @articles.each do |article| %>
  <tr >
    <td><%= article.title %></td>
  </tr>
  <tr>
    <td><%= article.text %></td>
  </tr>
  <tr>
    <<td><%= link_to 'Show', article_path(article), class: 'btn-mini btn-success' %>
    <%= link_to 'Edit', edit_article_path(article), class: 'btn-mini btn-success' %>
    <%= link_to 'Destroy', article_path(article),class: 'btn-mini btn-success',
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>